<% include partials/head.ejs %>
<section class="profile">
    <% include partials/admin-panel.ejs %>
    <main id="newArticle">
    <h1><%= title %></h1>
    <table class="articleListTable">
            <% results.forEach( result =>{ %>
                <tr>
                    <td><%= result.username %></td>
                    <td><%= result.email %></td>
                    <td><a href="/admin/brugere/<%= result.id %>" class="aBtn">Rediger</a></td>
                    <td><a href="#" class="delBtn delBtnArticle" data-id="<%= result.id %>">Slet</a></td>
                </tr>
            <% }) %>
        </table>
     
     
    </main> 
    </section>

<script>
        document.addEventListener('DOMContentLoaded', () =>{
            const DelBtn = document.querySelectorAll('.delBtnArticle');
            DelBtn.forEach(btn => {
               btn.addEventListener('click', 
                event => {
        
                    const id = event.target.dataset.id;
        
                    fetch(`/admin/brugere/${id}`, {
                        'method': 'DELETE'
                    })
                    .then(response => {
                        if(response.status === 200){
                            window.location.reload();
                        }
                    });
        
                }); 
            });
        
        
        
        });
</script>

